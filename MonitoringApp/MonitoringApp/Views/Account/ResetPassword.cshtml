@model MonitoringApp.ViewModels.UserModelForResetPassword
@{
    ViewData["Title"] = "Şifreyi Yenile";
}
<div class="row justify-content-center">
    <form asp-action="ResetPassword" method="post" class="col-4">
        <h1 style="text-align: center">Change Password</h1>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Password (Confirm)" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <input hidden asp-for="UserId" />
        <input hidden asp-for="Token" />
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>