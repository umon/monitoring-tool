@model MonitoringApp.ViewModels.TargetApplicationModelForDetails

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Target Application Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Interval) (minutes.)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Interval)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status) 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status) -
            <a class="btn btn-sm btn-@(Model.Status == MonitoringApp.Enums.MonitorStatus.Stopped ? "success" : "danger")" asp-action="ChangeStatus" asp-route-id="@Model.Id">@(Model.Status == MonitoringApp.Enums.MonitorStatus.Stopped ? "Monitor" : "Stop")</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotificationMail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NotificationMail)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
